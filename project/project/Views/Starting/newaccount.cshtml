@model project.ViewModels.RegisterViewModel
@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link href="images/favicon_img.png" rel="shortcut icon" type="image/x-icon">
    @*<link rel="stylesheet" type="text/css" href="css/userNewAccount.css">*@
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@4.6.1/dist/css/bootstrap.min.css" integrity="sha384-zCbKRCUGaJDkqS1kPbPd7TveP5iyJE0EjAuZQTgFLD2ylzuqKfdKlfG/eSrtxUkn" crossorigin="anonymous">
    <link href='https://fonts.googleapis.com/css?family=Roboto' rel='stylesheet'>
    <title>Register</title>
    <style type="text/css">
        body {
            background-image: linear-gradient(to right, #DECBA4, #3E5151);
        }
            .prices_heading {
            display: flex;
            flex-direction: column;
            align-items: center;
            justify-content: center;
            color: #4f4f4f;
            margin-top: 30px;
        }

            .prices_heading h1 {
                font-size: 36px;
            }

        .prices_box {
            display: flex;
            align-items: center;
            justify-content: center;
            position: relative;
        }

        .left_line, .right_line {
            width: 62px;
            height: 1px;
            background-color: #CCCCCC;
            margin: 0px 8px;
        }

        button:focus, input:focus, textarea:focus, select:focus {
            box-shadow: none !important;
            border: 2px solid #1d7a8c !important;
            outline: #1d7a8c !important;
        }

        .abb {
            height: 20px;
            width: 20px;
        }

        .createNewAccount {
            max-width: 615px;
            margin: 0 auto;
            overflow-x: hidden;
            padding: 15px;
        }

        .clr1 {
            color: #646464;
        }

        .clr2 {
            color: #1d7a8c;
        }

        .abc {
            font-size: 14px;
        }

        .submitButton {
            min-width: 170px;
            padding: 10px 30px !important;
            background-color: #1d7a8c !important;
        }
    </style>
</head>

<body>
    <div class="header1" id="topheader">

        <div class="prices_heading position-relative">
            <h1 class="font-weight-bolder">Create New Account</h1>
            <div class="prices_box">
                <div class="left_line"></div>
                <img src="/images/separator.png" alt="" />
                <div class="right_line"></div>
            </div>
        </div>

        <div class="my-5">
            <form method="post" class="createNewAccount" autocomplete="off">
                <div asp-validation-summary="All" class="text-danger"></div>
                <div class="row">
                    <div class="col-sm-6 mb-3">
                        <div class="form-group d-flex flex-column">
                            <input type="text" asp-for="FirstName" placeholder="First name" class="bdrheight form-control">
                            <span asp-validation-for="FirstName" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="col-sm-6 mb-3">
                        <div class="form-group d-flex flex-column">
                            <input type="text" asp-for="LastName" placeholder="Last name" class="bdrheight form-control">
                            <span asp-validation-for="LastName" class="text-danger"></span>
                        </div>
                    </div>
                </div>
                <div class="row">
                    <div class="col-sm-6 mb-3">
                        <div class="form-group d-flex flex-column">
                            <input type="email" asp-for="Email" placeholder="Email Address" class="bdrheight form-control">
                            <span asp-validation-for="Email" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="col-sm-6 mb-3">
                        <div class="form-group d-flex flex-column">
                            <div class="d-flex">
                                <input type="text" value="+91" disabled style="max-width: 55px;" class="bdrheight form-control">
                                <input type="text" asp-for="MobileNo" placeholder="Mobile number" class="bdrheight form-control">
                                <span asp-validation-for="MobileNo" class="text-danger"></span>
                            </div>

                        </div>
                    </div>
                </div>
                <div class="row">
                    <div class="col-sm-6 mb-3">
                        <div class="form-group d-flex flex-column">
                            <input type="password" asp-for="Password" placeholder="Password" class="bdrheight form-control">
                            <span asp-validation-for="Password" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="col-sm-6 mb-3">
                        <div class="form-group d-flex flex-column">
                            <input type="password" asp-for="ConfirmPassword" name="confirmpassword" id="confirmpassword" placeholder="Confirm password" class="bdrheight form-control">
                            <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
                        </div>
                    </div>
                </div>

                <div class="d-flex align-items-center my-1">
                    <input type="checkbox" name="termsandconditions" class="abb">
                    <label for="termsandconditions" class="abc ml-2 mt-2">I agree with the <span><a href="#" class="text-decoration-none clr2">terms and conditions</a></span> of Helperland GmbH.</label>
                </div>
                <div class="d-flex align-items-center my-1">
                    <input type="checkbox" name="privacypolicy" class="abb">
                    <label for="privacypolicy" class="abc ml-2 mt-2">I have read the <span><a href="#" class="text-decoration-none clr2">privacy policy.</a></span> </label>
                </div>
                <div class="text-center mt-4">
                    <button class="btn submitButton text-light rounded-pill" id="registerButton">Register</button>
                </div>
            </form>
            <div class="text-center mt-3 clr1 font-weight-bold">
                Already registered?
                <span><a class="text-white text-decoration-none" asp-controller="Starting" asp-action="Index">Login now</a></span>
            </div>
        </div>
    </div>
    <script src="~/lib/jquery/dist/jquery.js"></script>
    <script src="~/lib/jquery-validation/dist/jquery.validate.min.js"></script>
    <script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.min.js"></script>
</body>
</html>
